{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "lldb",
            "request": "launch",            
            "cargo": {
                "args": [
                    "build",
                    "--bin=portfolio_api",
                    "--package=portfolio_api"
                ],
            },
            "cwd": "${workspaceFolder}\\src", // this path is required to find the configuration file
            "env": {
                "CONFIGURATION_FILE": "./configuration_local.json"
            }   
        },
        {
            "name": "Unit tests",
            "type": "lldb",
            "request": "launch",            
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=portfolio_api",
                    "--package=portfolio_api"
                ],
                "filter": {
                    "name": "portfolio_api",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üê≥ Docker Compose",
            "type": "node",
            "request": "attach",
            "preLaunchTask": "üê≥ Docker Compose Up",
        }
    ]
}